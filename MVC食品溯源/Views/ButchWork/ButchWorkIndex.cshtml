
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>牲畜屠宰</title>
	<link href="~/Scripts/jquery-easyui-1.4.4/themes/bootstrap/easyui.css" rel="stylesheet" />
	<script src="~/Scripts/jquery-easyui-1.4.4/jquery.min.js"></script>
	<script src="~/Scripts/jquery-easyui-1.4.4/jquery.easyui.min.js"></script>
	<script src="~/Scripts/jquery-easyui-1.4.4/locale/easyui-lang-zh_CN.js"></script>
	<link href="~/Content/themes/icon.css" rel="stylesheet" />
	<link href="~/Scripts/jquery-easyui-1.4.4/themes/icon.css" rel="stylesheet" />
	<script src="~/Content/js/common.js"></script>
	<link href="~/Content/themes/table.css" rel="stylesheet" />
	<style>
		body {
			font-family: 'Microsoft YaHei';
		}
	</style>
	<script>
		$(document).ready(function () {
			$("#this_table").datagrid({
				url:"/ButchWork/GetAllButchWorkAction",
				striped: true,
				rownumbers: true,
				pagination: true,
				singleSelect: true,
				idField: 'ButchWorkInfoID',
				sortName: 'ButchFactoryID',
				sortOrder: "asc",
				pageList: [5, 10, 20, 30],
				columns: [[
					{ field: "ButchWorkInfoID", title: "操作ID", width: 100 },
					{ field: "ButchFactoryID", title: "屠宰场编号", width: 100 },
					{ field: "ButchDate", title: "屠宰日期", width: 150 },
					{ field: "ButchInfo", title: "屠宰信息", width: 150 },
					{ field: "AnimalUniqueCode", title: "牲畜ID", width: 100 },
					{ field: "AnimalState", title: "牲畜状态", width: 120 },
					{ field: "VideoSource", title: "视频路径", width: 200 }
				]],
				toolbar: [
					{ text: '添加', iconCls: 'icon-add', handler: function () { add(); } },
					{ text: '修改', iconCls: 'icon-edit', handler: function () { edit(); } },
					{ text: '删除', iconCls: 'icon-remove', handler: function () { deleteRow(); } }
				]
			})
		})
		function add() {
			$("<div/>").dialog({
				id: "addButchWork_div",
				href: "/ButchWork/AddButchWorkPage",
				title: "添加屠宰信息",
				width: 300,
				height: 260,
				modal: true,
				buttons: [{
					id: 'certain',
					text: '添 加',
					handler: function () {
						var butch_info = $("#butch_info").val();
						var animal_id = $("#animal_id").val();
						var animal_state = $("#animal_state").val();
						$.ajax({
							url: "/ButchWork/AddOneButchWorkInfo",
							data: { 'butch_info': butch_info, 'animal_id': animal_id, 'animal_state': animal_state },
							type: "POST",
							dataType: "Json",
							success: function (data) {
								alert(data);
								$("#addButchWork_div").dialog("destroy");
								$("#this_table").datagrid("reload").datagrid("clearSelections").datagrid("clearChecked");
							}
						})
					}
				}, {
					text: '取消',
					handler: function () {
						$("#addButchWork_div").dialog("destroy");
					}
				}],
				onLoad: function () {
					// do nothing
				},
				onClose: function () {
					$("#addButchWork_div").dialog("destroy");
				}
			})
		}
		function edit() {
			//编辑
			var row = $("#this_table").datagrid("getChecked");
			if (row.length < 1) {
				$.messager.alert("Notification", "Please choose the button");
				return;
			}
			else {
				$("<div/>").dialog({
					id: "alterButchWork_div",
					href: "/ButchWork/AlterButchWorkPage",
					title: "修改屠宰信息",
					width: 300,
					height: 200,
					modal: true,
					buttons: [{
						id: 'certain',
						text: '修  改',
						handler: function () {
							var rows = $("#this_table").datagrid("getChecked");
							var butch_id = "";
							$.each(rows, function (i, row) {
								butch_id = row.ButchWorkInfoID;
							});
							var butch_info = $("#butch_info").val();
							var animal_state = $("#animal_state").val();
							$.ajax({
								url: "/ButchWork/AlterButchWorkInfoById",
								data: { 'butch_id': butch_id, 'butch_info': butch_info, 'animal_state': animal_state },
								type: "POST",
								dataType: "Json",
								success: function (data) {
									alert(data);
									$("#alterButchWork_div").dialog("destroy");
									$("#this_table").datagrid("reload").datagrid("clearSelections").datagrid("clearChecked");
								}
							})
						}
					}, {
						text: '取消',
						handler: function () {
							$("alterButchWork_div").dialog("destroy");
						}
					}],
					onLoad: function () {
						// do nothing
					},
					onClose: function () {
						$("#alterButchWork_div").dialog("destroy");
					}
				})
			}
		}

		function deleteRow() {
			//删除行
			var rows = $("#this_table").datagrid("getChecked");
			if (rows.length < 1)
			{
				$.messager.confirm("提示", "请先选中要删除的列");
				return;
			}
			else {
				$.messager.confirm("提示", "确定删除此列？", function (r) {
					if (r) {
						var ButchWorkID = "";
						$.each(rows, function (i, row) {
							ButchWorkID = row.ButchWorkInfoID;
						});
						$.ajax({
							url: "/ButchWork/DeleteButchWorkById",
							data: { 'butch_id': ButchWorkID },
							type: "POST",
							dataType: "Json",
							success: function (data) {
								alert(data);
								$("#this_table").datagrid("reload").datagrid("clearSelections").datagrid("clearChecked");
							}
						})
					}
				});
			}
		}
	</script>
</head>
<body>
	<div class="easyui-layout" style="width:100%;height:700px;">
		<div data-options="region:'north'" style="height:100px">
			牲畜屠宰管理平台
		</div>
		<div data-options="region:'south',split:true" style="height:50px;"></div>
		<div data-options="region:'center',title:'牲畜屠宰管理页面'">
			<table id="this_table"></table>
		</div>
	</div>
</body>
</html>
