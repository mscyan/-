		//退出登录
		function loginOut() {
			$.messager.confirm("提示", "确定退出系统？", function (r) {
				if (r) {
					$.ajax({
						url: "/Login/LoginOut",
						type: "post",
						data: { "action": "logout" },
						dataType: "Json",
						success: function (result) {
							if (result.success) {
								window.location.href = "/Login/LoginIndex";
							}
							else {
								$.messager.alert("提示", result.msg);
							}
						}
					})
				}
			});
		}

		getToolBar = function (data) {
			if (data.toolbar != undefined && data.toolbar != '') {
				var toolbar = [];
				$.each(data.toolbar, function (index, row) {
					var handler = row.handler;
					row.handler = function () { eval(handler); };
					toolbar.push(row);
				});
				return toolbar;
			} else {
				return [];
			}
		}
		$(document).ready(function () {
			$.ajax({
				url: "/Role/GetUserPowerButton",
				data: { "KeyName": "ButchWork" },
				dataType: "Json",
				type: "POST",
				success: function (data) {
					if (data.success) {
						var toolbar = getToolBar(data);
						$("#this_table").datagrid({
							url: "/ButchWork/GetAllButchWorkAction",
							striped: true,
							rownumbers: true,
							pagination: true,
							singleSelect: true,
							idField: 'ButchWorkInfoID',
							sortName: 'ButchFactoryID',
							sortOrder: "asc",
							pageList: [5, 10, 20, 30],
							columns: [[
								{ field: "ButchWorkInfoID", title: "操作ID", width: 100 },
								{ field: "ButchFactoryID", title: "屠宰场编号", width: 100 },
								{ field: "ButchDate", title: "屠宰日期", width: 150 },
								{ field: "ButchInfo", title: "屠宰信息", width: 150 },
								{ field: "AnimalUniqueCode", title: "牲畜ID", width: 100 },
								{ field: "AnimalState", title: "牲畜状态", width: 120 },
								{ field: "VideoSource", title: "视频路径", width: 350 }
							]],
							toolbar: toolbar.length == 0 ? null : toolbar
						})
					} else {
						$.messager.alert("错误", data.msg);
					}
				},
				error: function (XMLHttpRequest, textStatus, errorThrown) {
					alert(XMLHttpRequest.status);
					alert(XMLHttpRequest.readyState);
					alert(textStatus);
				}
			});
		})

